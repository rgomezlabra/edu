{% extends path(aplicacion.ruta) ~ '/incidencia_index.html.twig' %}

{% block content %}
    <div class="badge-primary rounded-pill float-end">{{ app.user.persona }}</div>
    <div class="pagina-titulo">{{ titulo }}</div>

    {{ form_start(form) }}
    {{ form_row(form.cuestionario) }}
    {{ form_row(form.tipo) }}
    {{ form_row(form.incidencia.descripcion) }}
    <div class="linea-botones">
        <button class="btn btn-primary"><span class="fas fa-save"></span> {{ button_label|default('Guardar') }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block botones %}{% endblock %}

{% block migas %}
    {{ parent() }}
    <li class="breadcrumb-item">
        <a href="{{ path(aplicacion.ruta ~ '_formulario_incidencia_index', {codigo: incidencia.cuestionario.url|u.afterLast('/')}) }}">
            Incidencias
        </a>
    </li>
{% endblock %}