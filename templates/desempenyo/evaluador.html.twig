{% extends path(aplicacion.ruta) ~ '/index.html.twig' %}

{% block content %}
    <div class="badge-primary rounded-pill float-end">{{ empleado.persona }}</div>
    <div class="pagina-titulo">{{ titulo }}</div>

    <div class="pagina-seccion">Cuestionario {{ cuestionario.titulo }}</div>
    <div class="my-4">
        {%- if evaluaciones|length == 0 %}
            <div class="alert alert-warning">
            <em class="mx-2 fas fa-exclamation-triangle"></em>
            No tiene evaluadores asignados, puede solicitarlo creando una nueva incidencia.
            </div>
        {%- else %}
            <table class="tabla-condensada" id="datosEvaluadores">
                <thead class="cabecera-condensada">
                    <tr>
                        <th>Unidad</th>
                        <th>Evaluador</th>
                        <th data-dt-order="disable">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {%- for evaluacion in evaluaciones %}
                    <tr>
                        <td>
                            {{- evaluacion.evaluador.plazaOcupada ? evaluacion.evaluador.plazaOcupada.unidad.nombre
                            : (evaluacion.evaluador.plazaTitular ? evaluacion.evaluador.plazaTitular.unidad.nombre) -}}
                        </td>
                        <td>{{ evaluacion.evaluador.persona }}</td>
                        <td>
                            <em class="mx-1 fas fa-ear-listen" title="incidencia"></em>
                        </td>
                    </tr>
                {%- endfor %}
                </tbody>
            </table>
        {%- endif %}
    </div>
{% endblock %}

{% block botones %}
    <li class="nav-item me-2">
{#        <a class="btn btn-primary" href="{{ path(aplicacion.ruta ~ '_admin_cuestionario_new') }}">#}
            <span class="fas fa-plus"></span> Incidencia
{#        </a>#}
    </li>
{% endblock %}

{% block migas %}
    {{ parent() }}
    <li class="breadcrumb-item">
        <a href="{{ path(aplicacion.ruta) }}">
            <em class="me-1 fas {{ aplicacion.icono }}"></em>{{ aplicacion.nombreCorto }}
        </a>
    </li>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="module">
        $('#datosEvaluadores').dataTable({
            buttons: [
                {
                    extend: 'copy',
                    text: '<i class="fas fa-copy"></i>',
                    titleAttr: 'Copiar',
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: [0, 1],
                        stripHtml: false,
                    },
                    text: '<i class="fas fa-print"></i>',
                    titleAttr: 'Imprimir',
                },
                {
                    extend: 'csv',
                    exportOptions: {
                        columns: [0, 1],
                    },
                    text: '<i class="fas fa-file-csv"></i>',
                    titleAttr: 'Generar fichero CSV',
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: [0, 1],
                    },
                    text: '<i class="fas fa-file-excel"></i>',
                    titleAttr: 'Generar fichero Excel',
                },
            ],
            dom: '<"row"<"col-sm-12 col-md-4"B><"col-sm-12 col-md-4"l><"col-sm-12 col-md-4"f>>' +
                '<"row"<"col-sm-12"<"table-responsive"tr>>>' +
                '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            language: {
                url: '{{ asset("includes/datatable.es.json") }}',
            },
        });
    </script>
{% endblock %}
