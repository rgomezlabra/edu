{% extends path(aplicacion.ruta) ~ '/index.html.twig' %}

{% block content %}
    <div class="badge-primary rounded-pill float-end">{{ app.user.persona }}</div>
    <div class="pagina-titulo">{{ titulo }}</div>

    <table class="tabla-condensada" id="datosTipos">
        <thead class="cabecera-condensada">
            <tr>
                <th>Estado</th>
                <th class="text-center">Estado</th>
                <th>Cuestionario</th>
                <th>Tipo de incidencia</th>
                <th>Solicitud</th>
                <th>Resoluci√≥n</th>
                <th data-dt-order="disable">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {%- for incidencia in incidencias %}
            <tr>
                <td>{{ incidencia.incidencia.apuntes.last.estado.nombre|default }}</td>
                <td class="text-center">
                    {%- if incidencia.incidencia.apuntes.last.estado -%}
                        <em class="fas {{ incidencia.incidencia.apuntes.last.estado.icono }} text-{{ incidencia.incidencia.apuntes.last.estado.color }}"
                            title="{{ incidencia.incidencia.apuntes.last.estado.nombre }}"></em>
                    {%- endif -%}
                </td>
                <td>{{ incidencia.cuestionario.titulo }}</td>
                <td>{{ incidencia.tipo.nombre }}</td>
                <td>{{ incidencia.incidencia.apuntes.first.fechaInicio ? incidencia.incidencia.apuntes.first.fechaInicio|date('Y-m-d, H:i') }}</td>
                <td>
                    {%- if incidencia.incidencia.apuntes.last.estado.nombre == constant('App\\Entity\\Sistema\\Estado::FINALIZADO') -%}
                        {{- incidencia.incidencia.apuntes.first.fechaFin ? incidencia.incidencia.apuntes.first.fechaFin|date('Y-m-d, H:i') -}}
                    {%- endif -%}
                </td>
                <td>
                    <a href="{{ path(aplicacion.ruta ~ '_formulario_incidencia_show', {codigo: codigo, id: incidencia.id}) }}">
                        <span class="mx-1 fas fa-eye" title="Ver apuntes"></span>
                    </a>
                </td>
            </tr>
        {%- endfor %}
        </tbody>
        <caption class="mt-4">
            <span class="me-4">Estados</span>
            {%- for estado in aplicacion.estados|filter(e => e.tipo == constant('App\\Entity\\Sistema\\EstadoTipo::INCIDENCIA') and e.icono is not null) -%}
                <span class="me-4 badge {% if estado.color %}text-{{ estado.color }}{% else %}text-black{% endif %}">
                    <em class="fas {{ estado.icono }}"></em> {{ estado.nombre }}</span>
            {%- endfor -%}
        </caption>
    </table>
{% endblock %}

{% block botones %}
    <li class="nav-item me-2">
        <a class="btn btn-primary" href="{{ path(aplicacion.ruta ~ '_formulario_incidencia_new', {codigo: codigo}) }}">
            <span class="fas fa-plus"></span> Crear incidencia
        </a>
    </li>
{% endblock %}

{% block migas %}
    {{ parent() }}
    <li class="breadcrumb-item">
        <a href="{{ path(aplicacion.ruta) }}">
            <em class="me-1 fas {{ aplicacion.icono }}"></em>{{ aplicacion.nombreCorto }}
        </a>
    </li>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="module">
        $('#datosTipos').dataTable({
            buttons: [
                {
                    extend: 'copy',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 5],
                    },
                    text: '<i class="fas fa-copy"></i>',
                    titleAttr: 'Copiar',
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 5],
                        stripHtml: false,
                    },
                    text: '<i class="fas fa-print"></i>',
                    titleAttr: 'Imprimir',
                },
                {
                    extend: 'csv',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 5],
                    },
                    text: '<i class="fas fa-file-csv"></i>',
                    titleAttr: 'Generar fichero CSV',
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: [0, 2, 3, 4, 5],
                    },
                    text: '<i class="fas fa-file-excel"></i>',
                    titleAttr: 'Generar fichero Excel',
                },
            ],
            columnDefs: [
                {
                    targets: [0],
                    visible: false,
                },
            ],
            dom: '<"row"<"col-sm-12 col-md-4"B><"col-sm-12 col-md-4"l><"col-sm-12 col-md-4"f>>' +
                '<"row"<"col-sm-12"<"table-responsive"tr>>>' +
                '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            language: {
                url: '{{ asset("includes/datatable.es.json") }}',
            },
            order: [
                [3, 'desc'],
            ],
        });
    </script>
{% endblock %}
