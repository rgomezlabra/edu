{% extends 'desempenyo/admin/pregunta/index.html.twig' %}

{% block content %}
    <div class="pagina-titulo">{{ titulo }}</div>

    {{ include('desempenyo/admin/pregunta/_form.html.twig') }}
{% endblock %}

{% block migas %}
    {{ parent() }}
    <li class="breadcrumb-item">
        <a href="{{ path('desempenyo_admin_pregunta_index', {cuestionario: cuestionario.id, grupo: grupo.id}) }}">Preguntas</a>
    </li>
{% endblock %}

{% block botones %}{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="module">
        {{ include('cuestiona/admin/pregunta/_form.js') }}
        {%- if tipos[pregunta.tipo].dinamico %}
            {{ include('cuestiona/admin/pregunta/_form_dinamico.js') }}
        {%- endif %}
    </script>
{% endblock %}