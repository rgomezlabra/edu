{% set id = id|default('modalInfo') %}
<dialog id="{{ id }}"
        class="flex position-absolute top-0 bg-dark text-bg-dark rounded-3 shadow-lg z-1 {{ ancho|default('w-75') }}">
    <div class="flex-grow-0 p-2">
        <div class="float-end" title="Cerrar" onclick="document.querySelector('#{{ id }}').close();">
            {{ ux_icon('fa-solid:times') }}
        </div>
        <div id="{{ id is defined ? id ~ 'Titulo' : 'titulo' }}" class="h3">{{ titulo|default }}</div>
        <div class="border-top border-bottom border-light py-3 ">
            <div id="{{ id is defined ? id ~ 'Contenido' : 'contenido' }}">{{ contenido|raw }}</div>
        </div>
        <button class="my-2 float-end btn btn-primary" onclick="document.querySelector('#{{ id }}').close();">
            Cerrar
        </button>
    </div>
</dialog>
