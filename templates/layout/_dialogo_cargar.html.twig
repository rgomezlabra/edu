{% set id = id|default('modalCarga') %}
<dialog id="{{ id }}" aria-modal="false"
        class="flex position-absolute top-50 w-25 bg-dark text-bg-dark rounded-3 shadow-lg z-1">
    <div class="flex-grow-0 p-2">
        <div class="row">
            <div class="col-sm-3">
                <div class="spinner-border" role="status"><span class="sr-only"></span></div>
            </div>
            <div class="col-sm-9">{{ mensaje|default('Cargando...') }}</div>
        </div>
        {% if progreso|default(false) -%}
            <div class="progress" role="progressbar" aria-label="Carga" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                <div id="{{ id ~ 'Barra' }}" class="progress-bar overflow-visible" style="width: 0"></div>
            </div>
        {%- endif %}
    </div>
</dialog>
